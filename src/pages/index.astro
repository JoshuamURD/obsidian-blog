---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
---

<Layout title="Obsidian Blog">
  <div class="flex flex-col justify-center items-center">
    <h1 class="text-4xl font-bold mb-10 mt-5">Welcome to My Obsidian Blog</h1>
    <ul class="space-y-4">
      {posts.map((post) => (
        <li>
          <a class="block max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700" href={`/blog/${post.slug}`} class="text-blue-600 hover:underline">
            <h2 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{post.data.title}</h2>
            <p class="font-normal text-gray-700 dark:text-gray-400">{post.data.description}</p>
          </a>
          
        </li>
      ))}
    </ul>
  </div>

</Layout>