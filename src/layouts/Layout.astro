---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-gray-100 dark:bg-gray-900 min-h-screen flex flex-col">
    <Header />
    <div class="flex-grow flex justify-center">
      <div class="max-w-screen-xl w-full px-4 py-8 flex justify-center">
        <aside class="w-64 hidden lg:block">
          {/* Left sidenotes component will go here */}
        </aside>
        <main class="w-full max-w-[750px] px-4">
          <slot />
        </main>
        <aside class="w-64 hidden lg:block">
          {/* Right sidenotes component will go here */}
        </aside>
      </div>
    </div>
    <Footer />
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.5/flowbite.min.js"></script>
  </body>
</html>